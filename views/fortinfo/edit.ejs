<%- layout("layout/boiler") %>
<div class="row">
    <h1 class="text-center">New Fort</h1>
    <div class="col-6 offset-3">
        <form action="/forts" method="POST">
            <div class="mb-3" >
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="fort[title]" value="<%= fort.title %>" >
            </div>
            <div class="mb-3" >
                <label class="form-label" for="price">price</label>
                <input class="form-control"  type="text" id="price" name="fort[price]" value="<%= fort.price %>" >
            </div>

            <div class="mb-3 float-left" >
                <div class="py-2"> <label  for="description" >description</label></div>
                <div><textarea class="form-control" id="description" name="fort[description]">
                    <%= fort.description %>
                </textarea></div>
            </div>
            <div>
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="fort[location]" value="<%= fort.location %>" >
            </div>
            <button class="mt-3 btn btn-success" type="submit">Add fort</button>
        </form>
        <a href="/forts">All forts</a>
    </div>
</div>
